@model TripAgency.EF.Tipologia

@{
    ViewBag.Title = "Añadir Tipología";
}
<h2>Añadir nuevo</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tipología</h4>
        <br />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Nombre", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.tipologia1, new { @class = "form-control", @placeholder = "Nombre de Tipología" })
                @Html.ValidationMessageFor(model => model.tipologia1)
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Tarificación", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTarificacion")
                @Html.ValidationMessageFor(model => model.idTarificacion)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ir Atrás", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
