@model TripAgency.EF.Tipologia

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tipologia</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idTiologia)

        <div class="form-group">
            @Html.Label("Tipologia", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tipologia1)
                @Html.ValidationMessageFor(model => model.tipologia1)
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Tarificación", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTarificacion", String.Empty)
                @Html.ValidationMessageFor(model => model.idTarificacion)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ir Atás", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
