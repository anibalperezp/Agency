@model TripAgency.EF.Suplemento

@{
    ViewBag.Title = "Añadir Suplemento";
}

<h2>Añadir nuevo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Suplemento</h4>
        <br />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Nombre", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.suplemento1, new { @class = "form-control", @placeholder = "Nombre de Suplemento" })
                @Html.ValidationMessageFor(model => model.suplemento1)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Descripción", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.descripcion_suplemento, new { @class = "col-md-2", @placeholder = "Descripción" })
                @Html.ValidationMessageFor(model => model.descripcion_suplemento)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
