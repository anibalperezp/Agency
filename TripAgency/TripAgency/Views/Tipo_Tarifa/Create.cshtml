@model TripAgency.EF.Tipo_Tarifa

@{
    ViewBag.Title = "Añadir Tipo de Tarifa";
}
<h2>Añadir nuevo</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tipo de Tarifa</h4>
        <br />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Nombre", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.tipo_tarifa1, new { @class = "form-control", @placeholder = "Tipo de Tarifa" })
                @Html.ValidationMessageFor(model => model.tipo_tarifa1)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ir atrás", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
