            countryOptions.type = "POST";
            countryOptions.data = JSON.stringify({
                idhotel: $("#idhotel").val(),
                idanno: $("#idanno").val(),
                idEstacion: $("#idEstacion").val()
            });
            countryOptions.datatype = "json";
            countryOptions.contentType = "application/json";
